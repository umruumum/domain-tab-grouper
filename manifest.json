{
  "manifest_version": 3,
  "name": "Domain Tab Grouper",
  "version": "0.3.1",
  "description": "ドメインベースでタブを自動グループ化するChrome拡張機能",
  "permissions": [
    "tabs",
    "tabGroups",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "type": "module"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Domain Tab Grouper"
  }
}